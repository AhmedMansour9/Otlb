<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bc_splash"
    tools:context=".Fragments.Login">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="@dimen/_200sdp"
    android:background="@drawable/bc"
    />



    <ImageView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/logo_login"
        android:id="@+id/img_logo"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/img_logo"
        android:text="@string/raaleat"
        android:textColor="#fff"
        android:id="@+id/T_rallet"
        />


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="15dp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_below="@+id/T_rallet"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/signin"
                android:textColor="#f79459"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_30sdp"
                android:id="@+id/T_Signin"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_below="@+id/T_Signin"
                android:id="@+id/relative"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_height="@dimen/_60sdp">
                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/face"
                    android:id="@+id/L_Face"

                    />
                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/google"
                    android:id="@+id/L_google"
                    android:layout_alignParentEnd="true"

                    />



                <View
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_3sdp"
                    android:layout_alignParentBottom="true"
                    android:background="#c2c2c2"
                    android:layout_marginBottom="@dimen/_5sdp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/or"
                    android:textColor="#787672"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:id="@+id/T_or"
                    />

                <View
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_3sdp"
                    android:layout_alignParentBottom="true"
                    android:background="#c2c2c2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/_5sdp"

                    />
            </RelativeLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/login_text_name_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginRight="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/fullname"
                android:layout_below="@+id/relative">


                <EditText
                    android:id="@+id/login_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/_10sdp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:maxLength="60"
                    android:backgroundTint="#c2c2c2"
                    android:digits="ض ص ث ق ف غ ع ه خ ح ج د ط ك ن ت ا ل ب ي س ش ئ ء ؤ ر لا ى ةذ ظ ز وabcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:textColor="#000"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/login_text_phone_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginRight="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/phone"
                android:layout_below="@+id/login_text_name_input_layout">


                <EditText
                    android:id="@+id/login_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/_10sdp"
                    android:inputType="number"
                    android:textColor="#000"
                    android:maxLength="10"
                    android:backgroundTint="#c2c2c2"
                    android:ems="10">

                </EditText>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/login_text_address_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginRight="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/address"
                android:layout_below="@+id/login_text_phone_input_layout">


                <EditText
                    android:id="@+id/login_Address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/_10sdp"
                    android:inputType="text"
                    android:textColor="#000"
                    android:maxLines="1"
                    android:maxLength="80"
                    android:backgroundTint="#c2c2c2"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/login_text_email_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginRight="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/email"
                android:layout_below="@+id/login_text_address_input_layout">


                <EditText
                    android:id="@+id/login_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/_10sdp"
                    android:inputType="textEmailAddress"
                    android:textColor="#000"
                    android:maxLines="1"
                    android:maxLength="60"
                    android:backgroundTint="#c2c2c2"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/login_text_password_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginRight="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/password"
                app:passwordToggleEnabled="true"
                android:layout_below="@+id/login_text_email_input_layout">


                <EditText
                    android:id="@+id/login_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/_10sdp"
                    android:inputType="textPassword"
                    android:textColor="#000"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:backgroundTint="#c2c2c2"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/login_text_confirmpassword_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginRight="@dimen/_13sdp"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/confirmpass"
                android:layout_below="@+id/login_text_password_input_layout">


                <EditText
                    android:id="@+id/login_Confirmpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/_10sdp"
                    android:inputType="textPassword"
                    android:textColor="#000"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:backgroundTint="#c2c2c2"
                    />
            </android.support.design.widget.TextInputLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_below="@+id/login_text_confirmpassword_input_layout"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/bc_btnlogin"
                android:text="@string/signup"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:id="@+id/btn_siginin"
                />

     <ProgressBar
         android:layout_width="@dimen/_40sdp"
         android:layout_height="@dimen/_40sdp"
         android:layout_centerInParent="true"
         android:id="@+id/progressBarRegister"
         android:visibility="invisible"
         />
        </RelativeLayout>




    </android.support.v7.widget.CardView>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>